---
interface Props {
  id: string;
}
const { id } = Astro.props;
---

<form id="comment-form">
  <textarea
    name="comment"
    id="comment"
    required
    class="border border-gray-400 outline-none py-2 px-4"></textarea>
  <button type="submit" class="bg-gray-400 p-2 rounded-md">Submit</button>
</form>
