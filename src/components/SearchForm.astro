---
import { Icon } from "astro-icon/components";
---

<div class="text-center">
  <form
    class="w-5/6 mb-4 inline-block md:w-2/3 lg:w-1/3"
    action="/articles/search"
  >
    <input
      type="search"
      name="query"
      class="w-full p-2 border border-gray-300 outline-none rounded-lg hover:border-gray-500"
      placeholder="Search articles..."
      required
    />
    <button
      type="submit"
      class="my-2 px-2 py-1 bg-gray-300 rounded-md hover:bg-indigo-500 hover:text-white"
    >
      <!-- <Icon name="search-glass" size={24} class="absolute top-2 right-4 hover:cursor-pointer" /> -->
      Search
    </button>
  </form>
</div>
