---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils";
import Tags from "./Tags.astro";
const { article } = Astro.props;

interface Props {
  article: CollectionEntry<"blog">;
}
---

<div class="max-w-md mx-auto mt-10">
  <div
    class="bg-white rounded-lg overflow-hidden shadow-lg flex flex-col h-full"
  >
    <a href={`/articles/${article.id}`}>
      <img
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
        src={article.data.image}
        alt=""
      />
    </a>
    <div class="p-6 flex-grow flex flex-col">
      <h2 class="text-2xl font-semibold mb-2">
        <a
          href={`articles/${article.id}`}
          class="hover:text-indigo-500 hover:underline">{article.data.title}</a
        >
      </h2>
      <p class="text-gray-600 text-sm mb-4">
        {formatDate(article.data.pubDate)}
      </p>
      <Tags tags={article.data.tags} />
    </div>
  </div>
</div>
